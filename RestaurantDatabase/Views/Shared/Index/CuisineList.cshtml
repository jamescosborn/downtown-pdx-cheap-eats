@using RestaurantDatabase.Models;

<h2>What kind of food do you want?</h2>
  @for(int i = 0; i < Model.Count; i += 2)
  {
    <div class="row">
      <div class="col-md-6">
        <a href="/cuisines/@Model[i].Id">
          <div class="well cuisine-entry">
            @Model[i].Name
          </div>
        </a>
      </div>
      <div class="col-md-6">
      @if(i + 1 < Model.Count)
      {
        <a href="/cuisines/@Model[i + 1].Id">
          <div class="well cuisine-entry">
            @Model[i + 1].Name
          </div>
        </a>
      }
      </div>
    </div>
  }
